         </children>
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </GridPane>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Choose existing location: " />
            <ComboBox fx:id="locationComboBox" prefWidth="150.0" />
            <Label text="Choose popular satellite: ">
               <HBox.margin>
                  <Insets left="4.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="satelliteComboBox" prefWidth="150.0" />
         </children>
         <VBox.margin>
            <Insets />
